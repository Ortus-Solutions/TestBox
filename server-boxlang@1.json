{
    "app":{
        "cfengine":"boxlang@be",
        "serverHomeDirectory":".engine/boxlang"
    },
    "name":"testbox-boxlang",
    "force":true,
    "openBrowser":false,
    "web":{
        "directoryBrowsing":true,
        "http":{
            "port":"8599"
        },
        "rewrites":{
            "enable":true
        },
        "aliases":{
            "/testbox":"./"
        }
    },
    "JVM":{
        "heapSize":"1024",
        "javaVersion":"openjdk21_jdk",
		"args": "-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=8888"
    },
    "cfconfig":{
        "file":".cfconfig.json"
    },
    "env":{
        "BOXLANG_DEBUG":true
    },
    "scripts":{
        "onServerInitialInstall":"install bx-compat,bx-unsafe-evaluate"
    }
}
